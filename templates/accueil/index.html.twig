{% extends 'base.html.twig' %}

{% block title %}Hello AccueilController!
{% endblock %}

{% block body %}
	{{ dump(Hours) }}  
	<div class="container text-center">
		<div class="row">
			{% for service in Services %}
			{{ dump(service) }}
			<div class="col-4">
				<div class="card">

					<img src="upload/services/{{ service.picture }}" alt="{{service.title }}" class="align-self-center">" 
					<div class="card-body">
						<p class="card-text"></p>{{service.title }}
						</div>
					</div>
				{% endfor %}
			</div>
			{% endblock %}